	\renewtheorem{prop*}{Proposition}
	\renewtheorem{hilfssatz*}{Hilfssatz}
	\renewtheorem{definition*}{Definition}
	\renewtheorem{beispiel*}{Beispiel} \renewtheorem{beispiele*}{Beispiele}
	\renewtheorem{bemerkung*}{Bemerkung} \renewtheorem{bemerkungen*}{Bemerkungen}
