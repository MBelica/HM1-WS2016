% Regular theorems
\theoremstyle{break} \theorembodyfont{\normalfont} \theoremsymbol{} \theoremseparator{} 		
    \newtheorem{satz}{Satz}[section]	  	
    \newtheorem{lemma}[satz]{Lemma}	
    \newtheorem{prop}[satz]{Proposition}
    \newtheorem{hilfssatz}[satz]{Hilfssatz}
